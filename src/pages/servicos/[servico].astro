---
import Form from "@components/Form/form.astro";
import ToBook from "@components/ToBook.astro";
import Layout from "@layouts/Layout.astro";
import ToJSON from "@lib/ToJSON";
import dataServicos from "@lib/_dataServicos.json";
import styles from "./_heroColor.module.css";
import "./_servicos.css";

const servico: string = Astro.params?.servico || "default-service";
export const prerender = true;
const pageServicos = (dataServicos.paginas as { [key: string]: any })[servico];

export function getStaticPaths() {
  return [
    { params: { servico: "micropigmentacao-sobrancelhas" } },
    { params: { servico: "micropigmentacao-labial" } },
    { params: { servico: "micropigmentacao-olhos" } },
  ];
}
---

<Layout
  title={pageServicos.titulo}
  description={pageServicos.metaDescription}
  canonical={pageServicos.canonical}
  keywords={pageServicos.keywords}
>
  <section class="hero-sobrancelhas">
    <img
      class={pageServicos.idPage === "2"
        ? "positionObjetHero2"
        : pageServicos.idPage === "3"
          ? "positionObjetHero3"
          : ""}
      src={pageServicos.hero.img}
      alt={pageServicos.titulo}
    />
    <div
      class=`shadowyHero ${pageServicos.idPage === '1' ? styles.heroColor1 : pageServicos.idPage === '2' ? styles.heroColor2 : styles.heroColor3}`
    >
      <div class="ctroShadowlyHero">
        <div class="shadowyTextBody">
          <h1>
            {pageServicos.titulo}
          </h1>
          <p>
            {pageServicos.hero.descriptionHero}
          </p>
        </div>
        <div class="benefits">
          <ol>
            <li>✔</li>
            <li>✔</li>
            <li>✔</li>
            <li>✔</li>
          </ol>
          <ol class="benefitsWords">
            {
              pageServicos.hero.beneficios.map((item: string[] | undefined) => (
                <ToJSON tag="li" className="convincing" add={item} />
              ))
            }
          </ol>
        </div>
      </div>
    </div>
    <div
      class=`reservarHero ${pageServicos.idPage === '1' ? styles.heroColor11 : pageServicos.idPage === '2' ? styles.heroColor22 : styles.heroColor33}`
    >
      <button
        ><a
          href="https://zappysoftware.com/m/clinicamicropigmentacao"
          target="_blank">Reserve com desconto</a
        >
      </button>
      <div class="precoHero">
        <p>
          Preço antigo:
          <span>{pageServicos.hero.preco_Antigo}</span>
        </p>
        <p>
          Preço Atual:
          <span class="bold">{pageServicos.hero.preco_Atual}</span>
        </p>
      </div>
    </div>
  </section>

  <section
    class=`flex w-full mt-[24vh] mb-32 *:object-[0_19%] ${pageServicos.idPage === "2"
    ? "positionObjectVideo23"
    : pageServicos.idPage === "3"
      ? "positionObjectVideo23"
      : ""} *:w-1/2 *:h-[27rem] max-[767px]:mt-[10vh] max-[992px]:flex-col max-[992px]:*:w-full max-[430px]:*:h-1/2`
  >
    {
      Object.values(pageServicos.exhibitionVideo).map((item) => (
        <video autoplay loop muted playsinline>
          {typeof item === "string" ? (
            <source src={item} type="video/mp4" />
          ) : null}
          Seu navegador não suporta a tag de vídeo.
        </video>
      ))
    }
  </section>

  <section class="askSection">
    {
      Object.values(pageServicos.ask).map((item: any) => (
        <article class="ask">
          <img src={item.img} alt={item.alt} />
          <div>
            <h2>{item.title}</h2>
            <ToJSON tag="p" add={item.p} />
          </div>
        </article>
      ))
    }
  </section>

  <section class="incentive">
    <article>
      <h2>{pageServicos.incentive.title}</h2>
      {
        Object.values(pageServicos.incentive.questions).map((item: any) => (
          <p>
            <img class="size-12 mr-5" src={item.img} />
            {item.p}
          </p>
        ))
      }
    </article>
  </section>

  <section class="incentive">
    <article>
      <h2>{pageServicos.incentive.titleExtra}</h2>
      <ToJSON add={pageServicos.incentive.textExtra} tag="p" />
    </article>
  </section>

  <section class="incentive">
    <article class="card-group">
      <h2>{pageServicos.clientReviews.title}</h2>
      {
        Object.values(pageServicos.clientReviews.customers).map((item: any) => (
          <div class="card">
            {item.midia &&
              (item.midia.endsWith(".mp4") ? (
                <video
                  class={`reviewVideo ${pageServicos.idPage === "3" ? "positionObjet3" : ""}`}
                  playsinline
                  controls
                >
                  <source src={item.midia} type="video/mp4" />
                  Seu navegador não suporta a tag de vídeo.
                </video>
              ) : (
                <a href={item.link} target="_blank">
                  <img src={item.midia} class="card-img-top" alt=`${item.alt}${pageServicos.titulo}` />
                </a>
              ))}
            <div class="card-body cb-body">
              <h3 class="card-title">
                {item.link ? (
                  <a href={item.link} target="_blank">
                    {item.name}
                  </a>
                ) : (
                  item.name
                )}
              </h3>
              <h3 class="card-title">⭐⭐⭐⭐⭐</h3>
              <p>{item.review}</p>
            </div>
          </div>
        ))
      }
    </article>
  </section>

  <ToBook />
  <h2 style="margin-bottom: 0;" class="marcar-perguntar">ou</h2>
  <Form />
</Layout>