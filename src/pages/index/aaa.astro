---
import "./_home.css";
import Card from "@components/CardServicos.astro";
import dataServicos from "@lib/_dataServicos.json";
import navData from "@lib/navData";
---

<style>
  .nossos-servicos {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 7vh;
  }

  .nossos-servicos h2 {
    text-align: center;
    opacity: 0.8;
    margin: 5% 0 3% 0;
  }

  .dimension-total-ser {
    position: relative;
    display: flex;
    justify-content: center;
    height: 99%;
  }

  .card-servicos {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60px;

    padding: 0;
  }

  .card-servicos h3 a {
    color: #000;
  }

  .card-text-servicos {
    font-size: 14px;
    opacity: 0.8;
    text-align: center;
  }

  .activarS {
    padding: 0;
    margin-bottom: 5rem;
  }

  #cVerT {
    opacity: 0.5;
    margin: 0;
    padding: 1vh 0 5vh 0;
  }

  @media only screen and (min-width: 0) and (max-width: 600px) {
    .nossos-servicos h2 {
      margin: 0 0 4vh 0;
    }
  }

  @media only screen and (min-width: 601px) {
    .nossos-servicos h2 {
      margin: 0 0 4vh 0;
    }
  }

  @media only screen and (min-width: 768px) {
    .nossos-servicos h2 {
      margin: 0 0 6vh 0;
    }
  }
</style>

<section id="servicos" class="nossos-servicos">
  <h2>NOSSOS SERVIÃ‡OS</h2>
  {
    Object.entries(dataServicos.paginas).map(function ([key, item]) {
      // Verificar se o item tem a propriedade 'title'
      if ("title" in item) {
        const serviceInfo = navData.Servicos.find(function (service) {
          return service.name === item.title;
        });

        if (serviceInfo) {
          return (
            <Card
              key={key}
              title={item.title}
              body={item.description}
              src={item.hero.img}
              alt={item.title}
              href={serviceInfo.path}
            />
          );
        }
      }
      return null;
    })
  }
</section>

<script src="./slider.ts"></script>
<script>
  document.addEventListener("astro:page-load", () => {
    const openToggle = document.querySelector<HTMLElement>(".openToogle");

    if (openToggle) {
      openToggle.addEventListener("click", () => {
        openToggle.classList.toggle("open");
        const activarS = document.querySelector<HTMLElement>(".activarS");

        if (activarS) {
          activarS.classList.toggle("activeToogle");
        }
      });
    }
  });
</script>
