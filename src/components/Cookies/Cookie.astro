<style>
  .notice-Cookies {
    display: none;
    width: calc(100% - 2.5rem);
    box-shadow: 0 3px 20px 0 rgb(169 167 167 / 25%);
    z-index: 7;

    h3 {
      font-weight: bold;
      font-size: large;
      text-align: left;
    }
  }

  .max-43 {
    max-width: 43rem;
  }

  .notice-Cookies.active {
    display: block;
  }

  h3,
  p,
  button {
    margin-bottom: 0.5rem;
    text-wrap: wrap;
  }

  .bgCookie {
    display: none;
    background: rgba(0, 0, 0, 0.2);
    position: fixed;
    z-index: 6;
    width: 100vw;
    height: 100vh;
    top: 0;
    left: 0;
  }

  .bgCookie.active {
    display: block;
  }

  .option {
    display: none;
