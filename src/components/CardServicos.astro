---
const { title, body, src, alt, href } = Astro.props;
---

<article
  class="transition-transform duration-[0.3s] ease-[ease-in-out] scale-100 hover:scale-[1.015]"
>
  <figure
    class="cardServicos flex flex-col relative w-full h-full *:shadow-[0_0_5px_rgba(0,0,0,0.15)] m-2.5;"
  >
    <a href={href} class="flex flex-1 flex-col w-full h-full mb-2.5">
      <img
        src={src}
        alt={alt}
        class="w-full h-60 align-top relative object-cover min-[1500px]:h-72" 
      />
      <figcaption class="flex flex-1 flex-col p-4">
        <h3 class="mb-4">{title}</h3>
        <p class="text-[0.9em] tracking-[1px]">{body}</p>
      </figcaption>
    </a>
  </figure>
</article>
